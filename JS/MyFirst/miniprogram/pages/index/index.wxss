/**index.wxss**/

page {
  background: #f6f6f6;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}
.tip-image {
  height: 320rpx;
}
.content{
  display: flex;
  flex-direction: column;
  
}
.content-title{
  font-size: 50rpx;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
}
.group{
  display: flex;
  flex-direction: row;
  background-color: black;
}
.item{
  width: 175rpx;
  height: 150rpx;
  line-height: 150rpx;
  text-align: center;
  margin: 5rpx;
}
.orange{
  color: white;
  background-color: orange;
  border-radius: 5rpx;
}
.blue{
  color: white;
  background-color: blue;
  border-radius: 5rpx;
}