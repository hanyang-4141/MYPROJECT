page {
  background: #f6f6f6;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}

.userinfo{
  background-color: #fff;
  border: 1px solid rgba(0, 0, 0, 0.1);
  display: flex;
  flex-direction: row;
  /* height: 140rpx; */
  align-items: center;
  width: 100%;
  padding-left: 120rpx;
  height: 300rpx;
}
.userinfo-img{
  height: 200rpx;
  /* width: 200rpx; */
  border-radius: 50%;
  margin: 20rpx;
  background-color: rgb(255, 255, 255);
  background-size: cover;
}
.userinfo-img[size]{
  width: 200rpx;
}

.userinfo-text{
  flex: 1;
  display: flex;
  flex-direction: column;
}
.userinfo-username, .userinfo-nickname, .userinfo-id{
  font-size: 50rpx;
  color: #000000;
  background-color: white;
  background-size: cover;
  text-align: left;
  padding-left: 0;
  margin-left: 20px;
}
.userinfo-nickname{
  font-size: 30rpx;
}
.userinfo-id {
  font-size: 25rpx;
}

.group{
  height: 100rpx;
  width: 100%;
  margin: 20rpx;
  border: 1px solid rgba(0, 0, 0, 0.1);
  border-left: none;
  border-right: none;
  align-items: center;
  padding-left: 40rpx;
}
.SQTJ-text{
  font-size: 34rpx;
  width: 100%;
  line-height: 100rpx;
  color: #007aff;
}