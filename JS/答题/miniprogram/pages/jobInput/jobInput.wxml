<cu-custom bgColor="bg-gradual-pink" isBack='{{true}}'>
  <view slot="backText">返回</view>
  <view slot="content">工作记录</view>
</cu-custom>




<form action="gaga">
  <view class="cu-form-group margin-top">
    <view class="title">机组选择</view>
    <picker bindchange="PickerChange" value="{{jizuIndex}}" range="{{picker}}">
      <view class="picker">
        {{jizuIndex?picker[jizuIndex]:'请选择'}}
      </view>
    </picker>
  </view>
  <view class="cu-form-group align-start">
    <view class="title">工作内容</view>
    <textarea maxlength="-1" disabled="{{modalName!=null}}" bindinput="textareaBInput" placeholder="多行文本输入框"></textarea>
  </view>

  <view class="cu-form-group">
    <view class="title">开始日期</view>
    <picker mode="date" value="{{startdate}}" start="2021-01-01" end="2030-01-01" bindchange="StartDateChange">
      <view class="picker">
        {{startdate}}
      </view>
    </picker>
  </view>
  <view class="cu-form-group">
    <view class="title">开始时间</view>
    <picker mode="time" value="{{starttime}}" start="00:00" end="23:59" bindchange="StartTimeChange">
      <view class="picker">
        {{starttime}}
      </view>
    </picker>
  </view>

  <view class="cu-form-group">
    <view class="title">结束日期</view>
    <picker mode="date" value="{{enddate}}" start="2021-01-01" end="2030-01-01" bindchange="EndDateChange">
      <view class="picker">
        {{enddate}}
      </view>
    </picker>
  </view>
  <view class="cu-form-group">
    <view class="title">结束时间</view>
    <picker mode="time" value="{{endtime}}" start="00:00" end="23:59" bindchange="EndTimeChange">
      <view class="picker">
        {{endtime}}
      </view>
    </picker>
  </view>


  <view class="padding-sm flex flex-wrap">
    <view class="padding-xs" wx:for="{{ColorList}}" wx:key wx:if="{{item.name!='gray'}}">
      <view class="cu-tag bg-{{item.name}}">{{item.title}}</view>
    </view>
    <view class="padding-xs" wx:for="{{ColorList}}" wx:key
      wx:if="{{item.name!='gray' && item.name!='black' && item.name!='white'}}">
      <view class="cu-tag bg-{{item.name}} light">{{item.title}}</view>
    </view>
  </view>
  <button type="primary" bindtap="submit">提交</button>
</form>